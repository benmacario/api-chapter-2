{
  "compilerOptions": {
    "target": "es2017",                                
    "module": "commonjs",                           
    "lib": ["es6"],                                   
    "allowJs": true,
    "outDir": "./build",                              
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@errors/*": ["errors/*"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"]
    }  
  },
  "include": [
    "src/**/*"
  ]
}