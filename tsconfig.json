{
  "compilerOptions": {
    "target": "es2017",                                
    "module": "commonjs",                           
    "lib": ["es6"],                                   
    "allowJs": true,
    "outDir": "./build",                              
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@models/*": ["src/modules/cars/entities/*"],
      "@repositories/*": ["src/modules/cars/repositories/*"],
      "@useCases/*": ["src/modules/cars/useCases/*"],
      "@routes/*": ["src/routes/*"]
    }  
  },
  "include": [
    "src/**/*"
  ]
}